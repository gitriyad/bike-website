                <div class="cT tagContainer">
                  <% if(edit){ bike.clutchTypeArr.forEach( type => { %>
                  <div class="tag">
                    <%= type%>
                    <span class="removeTag" onclick="removeTag(this)">X</span>
                  </div>
                  <% });} %>
                </div>
                <input
                  type="text"

          <tr>
            <th>ABS</th>
            <td>
              <input type="text" class="abs" value="<%= edit?bike.abs:''%>" />
            </td>
          </tr>
          <tr>
            <th colspan="2" align="center">Wheels & Tires</th>
          </tr>
          <tr>
            <th>Front Tire Size</th>

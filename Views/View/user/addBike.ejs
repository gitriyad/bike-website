          <tr>
            <th>Indicators</th>
            <td>
              <input
                type="text"
                class="ind"
                value="<%= edit?bike.indicator:''%>"
              />
            </td>
          </tr>
          <tr>
            <th colspan="2" align="center">Features</th>
          </tr>
          <tr>
            <th>Speedometer</th>
            <td>
              <input
                type="text"
                class="speedMet"
                value="<%= edit?bike.speedoMeter:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>Odometer</th>
            <td>
              <input
                type="text"
                class="odoMet"
                value="<%= edit?bike.odoMeter:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>RPM Meter</th>
            <td>
              <input
                type="text"
                class="rpmMet"
                value="<%= edit?bike.rpmMeter:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>Handle Type</th>
            <td>
              <input
                type="text"
                class="handType"
                value="<%= edit?bike.handleType:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>Seat Type</th>
            <td>
              <input
                type="text"
                class="seatTyp"
                value="<%= edit?bike.seatType:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>Passenger Grab Rail</th>
            <td>
              <input
                type="text"
                class="passGRail"
                value="<%= edit?bike.passengerGrabRail:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>Engine Kill Switch</th>
            <td>
              <input
                type="text"
                class="engKS"
                value="<%= edit?bike.engineKillSwitch:''%>"
              />
            </td>
          </tr>
          <tr>
            <th colspan="2" align="center">
              Images
              <input
                type="file"
                class="bikeImage"
                accept="image/*"
                multiple
                onchange="handleImages(event,true)"
              />
            </th>
          </tr>
          <tr>
            <td colspan="2" align="center">
              <div class="imagesViewArea">
                <% if(edit){bike.imageArr.forEach(image=>{ %>
                <div
                  class="bikeImg"
                  style="
                    background-image: url('/upload/brand/<%= bike.brand %>/<%= bike.bikeName %>/images/<%= image %>');
                  "
                >
                  <span
                    class="removeImage"
                    onclick="removeImageFromServer(this,'<%= image%>','<%= bike._id%>')"
                    >X</span
                  >
                </div>
                <%})}%>
              </div>
            </td>
          </tr>
          <tr class="lastTr">
            <th colspan="2" align="center">
              Additional Feature <%if(edit &&
              bike.additionalFeatureArr.length>0){%>
              <input
                type="checkbox"
                class="addFeat"
                onchange="addAdditionalFeature(this,event)"
                checked="checked"
              />
              <%}else{%>
              <input
                type="checkbox"
                class="addFeat"
                onchange="addAdditionalFeature(this,event)"
              />
              <%}%>
            </th>
          </tr>
          <% if(edit && bike.additionalFeatureArr.length>0){ %>
          <tr class="addFeaTr">
            <th>Additional Features</th>
            <td>
              <div class="flexTd">
                <div class="addFeaDiv tagContainer">
                  <% if(edit){ bike.additionalFeatureArr.forEach(
                  (feature,index) => { %>
                  <div class="tag">
                    <%= feature%>
                    <span
                      class="removeTag"
                      onclick="removeTagFromServer(this,'<%= index%>','<%= bike._id%>')"
                      >X</span
                    >
                  </div>
                  <%})};%>
                </div>
                <input
                  type="text"
                  class="addFeaValue tagInput"
                  onkeydown="tagHandler(this,event,'<%= edit? `${Boolean(edit)}`:`${Boolean(false)}` %>')"
                  placeholder="Enter Features Tags"
                />
              </div>
            </td>
          </tr>
          <% } %>
        </table>
      </div>
      <div class="submitArea">
        <div class="save btn" data-user="<%= user %>" <%if(edit){%>
          onclick="saveData('<%= edit%>','<%= bike._id%>')" <%}else{%>
          onclick="saveData()" <%}%> > <%= edit?'Update':'Save'%>
        </div>
        <div class="upload btn" data-user="<%= user %>">Upload</div>

              <label for="wheelBaseValue">Value</label>
              <input
                type="number"
                class="wheelBaseValue"
                id="wheelBaseValue"
                value="<%= edit?bike.wheelBaseValue:''%>"
              /><br />
              <label for="wheelBaseUnit">Unit</label>

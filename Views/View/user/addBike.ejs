          <tr>
            <th>Brand Origin</th>
            <td>
              <input
                type="text"
                class="brandOrigin"
                value="<%= edit?bike.brandOrigin:''%>"
              />
            </td>
          </tr>
          <tr>
            <th>Assemble In</th>
            <td>
              <input
